# RIntoutes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

#Courses page
GET     /courses                        controllers.CourseController.getCourses

#CMR Report page
POST    /addReport                      controllers.CMRController.addCMRReport(courseId: String)
DELETE  /report/:cmrId                  controllers.CMRController.removeCMRReport(cmrId: Int)
GET     /report/:cmrId                  controllers.CMRController.getCMRReport(cmrId: Int)
PUT     /report/                        controllers.CMRController.submitCMR
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)